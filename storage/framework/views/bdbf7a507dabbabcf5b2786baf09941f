            </div>


            <div class="form-group">
                <?php echo Form::label('password', 'Пароль', array('class' => 'control-label')); ?>

                <?php echo Form::password('password', array('size'=> '100','class' => 'form-control')); ?>

            </div>


            <div class="form-group">
                <?php echo Form::label('password_confirmation', 'Повторите пароль', array('class' => 'control-label')); ?>

                <?php echo Form::password('password_confirmation', array('size'=> '100','class' => 'form-control')); ?>

            </div>


            <?php echo Form::token();; ?>

